{
  "manifest_version": 3,
  "name": "Timely - Multi-Timezone Converter",
  "version": "1.0.0",
  "description": "Convert and sync times across multiple timezones for analyzing logs and tickets",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
